[colors]
;background = ${xrdb:color0:#222}
;background = #222
background = #99000000
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/example0]
;monitor = ${env:MONITOR:HDMI-1}
monitor = ${env:MONITOR:}

width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

;border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 0

font-0 = "Ricty Diminished for Powerline:style=Regular:size=15"
font-1 = "Font Awesome 5 Brands:style=Regular:size=15"
font-2 = "Font Awesome 5 Free:style=Regular:size=15"
font-3 = "Font Awesome 5 Free:style=Solid:size=15"

modules-left = bspwm i3
modules-center = xwindow
modules-right = cpu memory popup-calendar

tray-position = right
tray-padding = 2
;tray-background = #0063ff
;wm-restack = bspwm
;wm-restack = i3
;override-redirect = true
;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

